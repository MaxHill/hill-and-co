<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png"/>
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png"/>
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png"/>
    <link rel="manifest" href="/images/favicons/manifest.json"/>
    <link rel="mask-icon" href="/images/favicons/safari-pinned-tab.svg" color="#252525"/>
    <link rel="shortcut icon" href="/images/favicons/favicon.ico"/>
    <meta name="msapplication-config" content="/images/favicons/browserconfig.xml"/>
    <meta name="theme-color" content="#ffffff"/>

    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || data.site.companyName %></title>

    <!-- Meta data -->
    <meta charset="utf-8">
    <meta property="og:title" content="<%= data.site.og.title %>">
    <meta property="og:url" content="<%= data.site.og.url %>">
    <meta property="og:type" content="<%= data.site.og.type %>">
    <meta property="og:locale" content="<%= data.site.locale %>">
    <meta property="og:description" content="<%= data.site.og.description %>">
    <meta property="og:image" content="<%= data.site.og.image %>">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald|Slabo+27px">
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
